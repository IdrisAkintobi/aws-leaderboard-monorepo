# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{ts,tsx,js,jsx,vue}]
quote_type = single
semi = true
trailing_comma = es5
print_width = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.mdx]
max_line_length = off
trim_trailing_whitespace = false

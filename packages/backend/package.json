{
    "name": "@aws-sam/backend",
    "version": "1.0.0",
    "private": true,
    "description": "Backend services for AWS SAM application",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "rm -rf .aws-sam && rm -rf dist && tsc",
        "deploy": "npm run build && samlocal build --config-env local -t template-local.yaml && samlocal deploy --config-env local -t template-local.yaml --guided",
        "teardown": "samlocal delete --config-env local -t template-local.yaml",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "check": "npm run lint && npm run format:check"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.152",
        "@types/aws-sdk": "^2.7.0",
        "@types/node": "^20.19.9",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.2",
        "eslint-import-resolver-typescript": "^3.10.1",
        "eslint-plugin-import": "^2.32.0",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.2"
    },
    "dependencies": {
        "@aws-sdk/client-apigatewaymanagementapi": "^3.859.0",
        "@aws-sdk/client-cognito-identity-provider": "^3.859.0",
        "@aws-sdk/client-dynamodb": "^3.859.0",
        "@aws-sdk/lib-dynamodb": "^3.859.0"
    }
}